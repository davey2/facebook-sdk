{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,

		"moduleResolution": "node",
		"esModuleInterop": true,

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"]
}
